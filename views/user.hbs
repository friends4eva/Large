<h1>{{this.name}} Home Page</h1>
<section class="get">

{{!-- <button>New Post</button>
 --}}
  {{#each user}}
    <ul>
      <li>Name: {{name}}</li>
      <li>Post: {{post}}</li>
      <button id="edit">Edit</button>
      <button id="delete">Delete</button>
    </ul>
  {{/each}}

    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s6">
            <input id="input_text titleText" type="text" data-length="50">
            <label for="input_text">Title</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <textarea id="textarea1 contentText" class="materialize-textarea" data-length="1000"></textarea>
            <label for="textarea1">Content</label>
          </div>
        </div>
      </form>
    </div>

  <button id ="submit" class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>

</section>
