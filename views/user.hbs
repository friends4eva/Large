
<h1>{{user.name}} Home Page</h1>
<section class="get">

{{!-- <button>New Post</button>
 --}}
  {{#each post}}
    <ul>
      <li>Name: {{login}}</li>
      <li>Post: {{post}}</li>
      <button id="edit">Edit</button>
      <button id="delete">Delete</button>
    </ul>
  {{/each}}

    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="input-field col s6">
            <input class="titleText" id="input_text" type="text" data-length="50">
            <label for="input_text">Title</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <textarea id="textarea1" class="materialize-textarea contentText" data-length="1000"></textarea>
            <label for="textarea1">Content</label>
          </div>
        </div>
      </form>
    </div>

  <button id ="submit" class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>

<a href="/auth/logout">LOGOUT</a>
</section>
